<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar">


    <FrameLayout
        android:id="@+id/surfaceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <SurfaceView
            android:id="@+id/surface1"
            android:layout_width="1920px"
            android:layout_height="1080px"
            />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">


        <com.example.streamerclientv2.CustomJoystick
            android:id="@+id/joystickLeft1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <View
            android:id="@+id/controlArea"
            android:layout_width="380dp"
            android:layout_height="450dp" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="20dp">



        <ImageButton
            android:id="@+id/shootButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/game_button"
            android:src="@drawable/img_shoot">
        </ImageButton>



        <ImageButton
            android:id="@+id/reloadButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/game_button"
            android:src="@drawable/img_reload">
            </ImageButton>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/eButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="E">
        </Button>

        <Button
            android:id="@+id/gButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="G">
        </Button>

        <Button
            android:id="@+id/jumpButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="JMP">
        </Button>

        <Button
            android:id="@+id/adsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="ADS">
        </Button>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/buttonContainer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">


        <Button
            android:id="@+id/exitButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="EXIT">
        </Button>

        <Button
            android:id="@+id/Button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="1">
        </Button>

        <Button
            android:id="@+id/Button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="2">
        </Button>

        <Button
            android:id="@+id/Button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="3">
        </Button>

        <Button
            android:id="@+id/Button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button2"
            android:textColor="#BBFFFFFF"
            android:text="4">
        </Button>

    </LinearLayout>


</RelativeLayout>